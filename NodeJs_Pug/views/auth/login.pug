html
    head
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T", crossorigin="anonymous")
        link(rel="stylesheet", href="/css/index.css")
    body
        form(action="/auth/login", method="POST").w-50.mx-auto.p-3.mt-5.border.rounded
            h3.text-center Đăng nhập
            each error in errors || []
                .alert.alert-danger= error
            .form-group
                label Username:
                input(type="text", name="username", placeholder="Username here...", value=account ? account.username : '').form-control
            .form-group
                label Password:
                input(type="password", name="password", placeholder="Password here...", value=account? account.password : '').form-control
            .text-center
                input(type="submit", value="Login").btn.btn-primary
        footer.bg-dark.py-3.text-center.text-white.fixed-bottom &copy; All Right Reserved By Vinh Corp 2020
